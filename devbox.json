{
  "packages": {
    "rustup": "1.28.2",
    "xray": "latest",
    "sqlite": {
      "version": "latest",
      "outputs": ["out"]
    },
    "sql-studio": "latest",
    "gcc": {
      "version": "latest",
      "outputs": ["out"]
    },
    "lld": "latest",
    "pkg-config": "latest",
    "openssl": "latest"
  },
  "shell": {
    "init_hook": [
      "rustup default stable",
      "cargo fetch"
    ],
    "scripts": {
      "server": "RUSTFLAGS=-Awarnings cargo run --bin server",
      "zed": "zeditor .",
      "sqlite": "sql-studio sqlite $HOME/.config/elux/storage.db"
    }
  }
}
