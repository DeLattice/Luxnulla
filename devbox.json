{
  "packages": {
    "rustup": "latest",
    "xray":   "latest",
    "sqlite": {
      "version": "latest",
      "outputs": ["out"]
    },
    "pkg-config": "latest",
    "nix-ld":     "latest",
    "sql-studio": "latest",
    "firejail":   "latest"
  },
  "shell": {
    "init_hook": [
      "rustup default nightly",
      "cargo fetch"
    ],
    "scripts": {
      "server": "RUSTFLAGS=-Awarnings cargo run --bin server",
      "zed": "zeditor .",
      "sqlite": "sql-studio sqlite $HOME/.config/luxnulla/storage.db"
    }
  }
}
